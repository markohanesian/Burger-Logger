<div class="alert alert-success" role="alert">
  <h2>Burgers that are not devoured!</h2>
  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="alert alert-danger" role="alert">
  <h2>Burgers that are devoured!</h2>
  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
      {{/if}}
    {{/each}}
  </ul>
</div>
<div class="alert alert-info" role="alert">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="sleepy" id="radio">Devoured?</label><br>
      <input type="radio" value="1" checked> Ready to devour!<br>
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>

