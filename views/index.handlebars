<div class="container">
  <div class="row">
    <div class="col-sm">
      <div class="card" style="width: 18rem;">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
          <h2>Burgers that are not devoured!</h2>
          <p class="card-text">
            <ul>
              {{#each burgers}}
              {{#unless devoured}}
              {{> burgers/burger-block devoured=false}}
              {{/unless}}
              {{/each}}
            </ul>
          </p>
        </div>
      </div>
    </div>
    <div class="col-sm">
      <div class="card" style="width: 18rem;">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
          <h2>Burgers that are devoured!</h2>
          <p class="card-text">
            <ul>
              {{#each burgers}}
              {{#if devoured}}
              {{> burgers/burger-block devoured=true}}
              {{/if}}
              {{/each}}
            </ul>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>




<div class="alert alert-info" role="alert">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="sleepy" id="radio">Devoured?</label><br>
      <input type="radio" value="1" checked> Ready to devour!<br>
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>

